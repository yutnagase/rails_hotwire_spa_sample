<%= turbo_stream.replace "customer_#{@customer.id}" do %>
  <tr id="customer_<%= @customer.id %>">
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= @customer.code %></td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= @customer.name %></td>
    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
      <%= link_to "表示", @customer, class: "text-purple-600 hover:text-purple-900 mr-3" %>
      <%= link_to "編集", edit_customer_path(@customer), 
          class: "text-purple-600 hover:text-purple-900 mr-3",
          data: { turbo_frame: "customer_form" } %>
      <%= link_to "削除", @customer, method: :delete,
          class: "text-red-600 hover:text-red-900",
          confirm: "本当に削除しますか？",
          data: { turbo_method: :delete } %>
    </td>
  </tr>
<% end %>

<%= turbo_stream.update "customer_form", "" %>