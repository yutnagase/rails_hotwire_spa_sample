<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      <%= product.persisted? ? "商品編集" : "新規商品登録" %>
    </h3>
    
    <%= form_with model: product, local: false, class: "mt-5 space-y-6", data: { controller: "price-calculator" } do |form| %>
      <% if product.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <%= form.label :code, "商品コード", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :code, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :name, "商品名", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :cost_price, "原価", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :cost_price, 
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm",
              data: { price_calculator_target: "costPrice", action: "input->price-calculator#calculateMargin" } %>
        </div>

        <div>
          <%= form.label :selling_price, "売価", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :selling_price, 
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm",
              data: { price_calculator_target: "sellingPrice", action: "input->price-calculator#calculateMargin" } %>
        </div>
      </div>

      <div class="text-sm text-gray-600" data-price-calculator-target="margin">利益率: -</div>

      <div class="flex justify-end space-x-3">
        <%= link_to "キャンセル", products_path, 
            class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500",
            data: { turbo_frame: "_top" } %>
        <%= form.submit product.persisted? ? "更新" : "登録", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
      </div>
    <% end %>
  </div>
</div>